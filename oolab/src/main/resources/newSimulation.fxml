<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="rootPane"
            minHeight="750.0" minWidth="1050.0"
            fx:controller="agh.ics.oop.presenter.SimulationPresenter">
    <top>
        <Label fx:id="moveNotificationLabel" text="Opis ruchu" style="-fx-font-size: 15px;" wrapText="true"/>
    </top>

    <left>
        <VBox spacing="20.0" alignment="TOP_LEFT" style="-fx-padding: 10; -fx-border-color: green;">
            <VBox spacing="5.0">
                <Label style="-fx-font-weight: bold;">Statystyki z mapy</Label>
                <Label text="Statystyki symulacji" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Label fx:id="animalCountLabel" text="Liczba zwierząt: 0"/>
                <Label fx:id="plantCountLabel" text="Liczba roślin: 0"/>
                <Label fx:id="freeFieldsLabel" text="Liczba wolnych pól: 0"/>
                <Label fx:id="dominantGenotypeLabel" text="Najpopularniejszy genotyp: Brak danych"/>
                <Label fx:id="avgEnergyLabel" text="Średni poziom energii: 0"/>
                <Label fx:id="avgLifespanLabel" text="Średnia długość życia: 0"/>
                <Label fx:id="avgChildrenLabel" text="Średnia liczba dzieci: 0"/>
            </VBox>
        </VBox>
    </left>

    <center>
        <GridPane fx:id="mapGrid" gridLinesVisible="true" BorderPane.alignment="CENTER" style="-fx-border-color: #f30505;"/>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <Button text="Zatrzymaj" onAction="#handlePauseSimulation"/>
            <Button text="Wznów" onAction="#handleResumeSimulation"/>
            <!--            <Button text="Oznacz zwierzaka" onAction="#handleTrackAnimal" />-->
            <!--            <Button text="Pokaż dominujące genotypy" onAction="#handleShowDominantGenotypes" />-->
            <!--            <Button text="Pokaż preferowane pola" onAction="#handleShowPreferredFields" />-->
        </HBox>
    </bottom>
</BorderPane>
